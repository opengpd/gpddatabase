{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema used by gpddatabase: data_types.yaml",
    "type": "object",
    "properties": {



        "data": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {

                    "name": {
                        "type": "string"
                    },

                    "description": {
                        "type": "string"
                    },

                    "required_name": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "string"
                        }
                    },


                    "required_type": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "string"
                        }
                    },
                    

                    "optional_name": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "string"
                        }
                    },


                    "optional_type": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "string"
                        }
                    },


                    "optional_default": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "type": "string"
                        }
                    }              

                },
                "required": ["name", "description", "required_name", "required_type", "optional_name", "optional_type", "optional_default"],
                "additionalProperties": false
            }
        }



    },
    "required": ["data"],
    "additionalProperties": false
}